{
  "name": "pytrader",
  "version": "1.0.0",
  "description": "Python/TypeScript trading system with real-time charts and analytics",
  "private": true,
  "workspaces": [
    "services/gateway",
    "services/market-data",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev:gateway": "npm run dev --workspace=services/gateway",
    "dev:market-data": "npm run dev --workspace=services/market-data",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:analytics": "cd services/analytics && uvicorn src.main:app --reload --port 3002",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules services/*/node_modules frontend/node_modules shared/node_modules",
    "setup": "npm install && cd services/analytics && pip install -e ."
  },
  "keywords": [
    "trading",
    "crypto",
    "stocks",
    "real-time",
    "charts",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fastify-tsconfig": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
